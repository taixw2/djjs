{
  "compilerOptions": {
    "target": "es6",
    "removeComments": true,
    "module": "CommonJS",
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "types",
    "rootDir": "./src"
  },
  "exclude": [
    "dist",
    "node_modules",
    "**/*.d.ts"
  ]
}